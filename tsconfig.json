{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "baseUrl": "./",
      "paths": {
        "components/*": ["./src/components/*"],
        "containers/*": ["./src/containers/*"],
        "utils/*": ["./src/utils/*"],
        "config/*": ["./src/config/*"],
        "moment$": ["moment/moment.js"]
      },
      "experimentalDecorators": true,
      "types": [
        "node"
      ],
      "lib": [
        "es6",
        "es2015",
        "dom",
        "es2015.promise"
      ]
  },
  "include": [
      "./*.d.ts",
      "./src/**/*"
  ]
}